public String reverseWordsInASentence(String sentence){
    List<String> rev = sentence?.split(' ');
    String final = '';

    for (Integer i = rev.size() - 1; i >= 0; i--) {
        if (rev[i] == '')
            final += rev[i];
    }   else
            final += ' ' + rev[i];
            
    return final;
}